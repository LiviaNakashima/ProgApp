<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_segundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="CALCULADORA DE LUCRO"
        android:textColor="#000000"
        android:background="#FFD54F"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Insira o nome do seu produto"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_segundo"/>

    <EditText
        android:id="@+id/et_numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Insira sua receita total"
        android:inputType="numberDecimal"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/et_texto"/>

    <EditText
        android:id="@+id/et_numero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Insira os custos"
        android:inputType="numberDecimal"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/et_numero1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clica em mim"
        android:textSize="25sp"
        android:id="@+id/bt_01"
        app:layout_constraintTop_toBottomOf="@id/et_numero2"
        android:layout_marginTop="30dp"
        /> <!--        android:onClick="clicar"-->

</androidx.constraintlayout.widget.ConstraintLayout>